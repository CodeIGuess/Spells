{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Spells",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#attributes" },
		{ "include": "#strings" },
		{ "include": "#scripts" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.spl",
				"match": "(^|\\n)( |\\t)*[a-zA-Z_-]+?\\b"
			}]
		},
		"attributes": {
			"patterns": [{
				"name": "constant.language.spl",
				"match": "\\(.*?(?=\\n)"
			}]
		},
		"strings": {
			"name": "string.quoted.double.spl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.spl",
					"match": "\\\\."
				}
			]
		},
		"scripts": {
			"begin": "script",
			"end": "`",
			"name": "source.ts",
			"patterns": [
				{
					"include": "source.ts"
				}
			]
		}
	},
	"scopeName": "source.spl"
}